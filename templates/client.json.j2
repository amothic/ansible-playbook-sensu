{
   "client": {
      "name": "{{ sensu_client_hostname }}",
      "address": "{{ sensu_client_address }}",
      {%- if sensu_client_additional_attributes -%}
      {%- for key, value in sensu_client_additional_attributes.iteritems() -%}
      "{{ key }}": "{{ value }}",
      {%- endfor -%}
      {%- endif -%}
      "subscriptions": [ "{{ "\",\"".join(sensu_client_subscription_names) }}" ]
   }
}
